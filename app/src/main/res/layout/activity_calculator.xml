<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.heo.myapplication.activitys.CalculatorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:textSize="25sp"
            android:id="@+id/result_text"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="30dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="30dp"/>

        <TextView
            android:textSize="25sp"
            android:layout_weight="1"
            android:id="@+id/result2_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="30dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:onClick="onClick"
                android:id="@+id/one_button"
                android:text="1"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:onClick="onClick"
                android:id="@+id/two_button"
                android:text="2"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:onClick="onClick"
                android:id="@+id/three_button"
                android:text="3"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:onClick="onClick"
                android:id="@+id/plus_button"
                android:text="+"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:onClick="onClick"
                android:id="@+id/four_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="40sp" />

            <Button
                android:onClick="onClick"
                android:id="@+id/five_button"
                android:text="5"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:onClick="onClick"
                android:id="@+id/six_button"
                android:text="6"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:onClick="onClick"
                android:id="@+id/minus_button"
                android:text="-"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:onClick="onClick"
                android:id="@+id/sevne_button"
                android:text="7"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:onClick="onClick"
                android:id="@+id/eight_button"
                android:text="8"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:onClick="onClick"
                android:id="@+id/nine_button"
                android:text="9"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/clear_button"
                android:onClick="onClick"
                android:text="c"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/multiply_botton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="*"
                android:textSize="40sp" />

            <Button
                android:onClick="onClick"
                android:id="@+id/zero_button"
                android:text="0"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/divition_button"
                android:onClick="onClick"
                android:text="/"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:onClick="onClick"
                android:id="@+id/equals_button"
                android:text="="
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
